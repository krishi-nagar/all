                        <label for="speak">Speak</label>
                        <% } else { %> 
                            <input type="checkbox" id="speak"  value = "<%-language[i].l_name %>"  name="speak">
                            <label for="speak">Speak</label>
                            <% } %>

                     </tr> <br><br>
                    
               <%}%>
               
            
           
        </tr>
        
    </table>
    </fieldset>

    <fieldset>
        <legend> Technologies Know:</legend>
        <table>
            <tr>
                <% for(var i=0;i<technologies.length; i++) { %>
                           
                    
                    <tr>
                        
                      
                       <input type="checkbox" checked value="<%= technologies[i].name %>"id="<%= technologies[i].name %>" name="technologies">
                       <label for="<%= technologies[i].name %>"><%= technologies[i].name %> </label>


                    <% if (technologies[i].level=="beginner") { %>
                        <input type="radio" checked id="beginner" name="<%= technologies[i].name %>" value="beginner" >
                        <label for="beginner">Beginner</label>

                        <input type="radio"  id="mediator" name="<%= technologies[i].name %>" value="mediator" >
                        <label for="mediator">Mediator</label>
                        
                        <input type="radio"  id="expert" name="<%= technologies[i].name %>"value="expert">
                        <label for="expert">Expert</label>

                    <% } else if(technologies[i].level=="expert"){ %>
                   
                        <input type="radio"  id="beginner" name="<%= technologies[i].name %>" value="beginner" >
                        <label for="beginner">Beginner</label>

                        <input type="radio"  id="mediator" name="<%= technologies[i].name %>" value="mediator" >
                        <label for="mediator">Mediator</label> 

                        <input type="radio" checked id="expert" name="<%= technologies[i].name %>"value="expert">
                        <label for="expert">Expert</label>
        
                    <% } else if (technologies[i].level=="mediator"){ %>

                        <input type="radio"  id="beginner" name="<%= technologies[i].name %>" value="beginner" >
                        <label for="beginner">Beginner</label>
                   
                        <input type="radio" checked id="mediator" name="<%= technologies[i].name %>" value="mediator" >
                        <label for="mediator">Mediator</label> 

                        <input type="radio"  id="expert" name="<%= technologies[i].name %>"value="expert">
                        <label for="expert">Expert</label>
                   
                        <% } else { %>
                              

                        <input type="radio"  id="beginner" name="<%= technologies[i].name %>" value="beginner" >
                        <label for="beginner">Beginner</label>
                   
                        <input type="radio"  id="mediator" name="<%= technologies[i].name %>" value="mediator" >
                        <label for="mediator">Mediator</label> 

                        <input type="radio"  id="expert" name="<%= technologies[i].name %>"value="expert">
                        <label for="expert">Expert</label>
                   

                            <% } %>
    
                    </tr><br><br>
    
                    <%}%>
    
               
    
            </tr>
        </table>
    
