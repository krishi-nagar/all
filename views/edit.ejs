                        <label for="<%= language[i].l_name %>"><%-language[i].l_name %> </label>
                        <% } else { %> 
                            <input type="checkbox" value="<%=language[i].l_name %>"id="<%= language[i].l_name %>" name="lang">
                            <label for="<%= language[i].l_name %>"><%-language[i].l_name %> </label>
                        <% } %>  


